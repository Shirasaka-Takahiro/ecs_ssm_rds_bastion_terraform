[
    {
        "name": "${project}-${env}-${task_role}-container",
        "image": "${ecr_repository_url}",
        "essential": true,
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
              "awslogs-region": "ap-northeast-1",
              "awslogs-stream-prefix": "${task_role}",
              "awslogs-group": "/ecs/${project}/${env}/${task_role}"
            }
          }
    }
]